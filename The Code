void One(){
    int A;
    do{
        cout << "Which way would you like to go?\n";
        cin >> A;
        if (A == 1){
            cout << "You stepped forwards.\n\n";
            Two();}
        if (A == 2){
            cout << "You shuffled to the Right, and bumped into a wall.\nMaybe you should take a step forward.\n\n";}
        if (A == 3){
            cout << "You walk back and bump into a wall.\nLooks like you must go forwards.\n\n";}
        if (A == 4){
            cout << "You shuffled to the left, and bumped into a wall.\nMaybe you should take a step forward.\n\n";}
        if (A >= 5){
            cout << "Not a valid action.\n\n";}}
        while(A >= 2);}

void Two(){
    int B;
    cout << "Which way would you like to go from here?\n";
    cin >> B;
    if (B == 1){
        cout << "You stepped forwards.\n\n";}
    if (B == 2){
        cout << "You shuffled to the Right.\n\n";}
    if (B == 3){
        cout << "You walk backwards.\n\n";
        One();}
    if (B == 4){
        cout << "You shuffled to the left.\n\n";}
    if (B >= 5){
        cout << "Not a valid action.\n\n";}}
